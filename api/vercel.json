{
  "version": 2,
  "name": "criminal-minds-api",
  "builds": [
    {
      "src": "api.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api.js"
    }
  ],
  "env": {
    "BD_URL": "@bd_url",
    "JWT_SECRET": "@jwt_secret", 
    "NODE_ENV": "@node_env"
  }
}