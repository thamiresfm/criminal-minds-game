{
  "name": "criminal-minds-game",
  "version": "1.0.0",
  "description": "Jogo de investigação criminal online para até 6 jogadores",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:api": "jest tests/api",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:functional": "playwright test tests/functional",
    "test:all": "npm run test:unit && npm run test:api && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:performance": "jest tests/performance --testTimeout=120000",
    "test:performance:accusation": "jest tests/performance/accusation-performance.test.ts --testTimeout=60000",
    "test:performance:suspects": "jest tests/performance/suspects-performance.test.ts --testTimeout=45000",
    "test:performance:load": "jest tests/performance/load-stress.test.ts --testTimeout=120000",
    "test:performance:metrics": "jest tests/performance/metrics-collector.test.ts --testTimeout=90000",
    "test:performance:all": "npm run test:performance:accusation && npm run test:performance:suspects && npm run test:performance:load && npm run test:performance:metrics",
    "test:security": "jest tests/security --testTimeout=60000",
    "test:security:auth": "jest tests/security/authentication-security.test.ts --testTimeout=30000",
    "test:security:injection": "jest tests/security/injection-security.test.ts --testTimeout=45000",
    "test:security:owasp": "jest tests/security/owasp-security.test.ts --testTimeout=60000",
    "test:security:all": "npm run test:security:auth && npm run test:security:injection && npm run test:security:owasp",
    "test:complete": "npm run test:unit && npm run test:api && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:security",
    "test:full-suite": "npm run test:unit && npm run test:api && npm run test:integration && npm run test:e2e && npm run test:performance:all && npm run test:security:all",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "framer-motion": "^10.18.0",
    "immer": "^10.1.1",
    "lucide-react": "^0.303.0",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.0",
    "react-hot-toast": "^2.4.0",
    "socket.io-client": "^4.7.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
