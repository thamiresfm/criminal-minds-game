{
  "name": "criminal-minds-game",
  "version": "1.0.0",
  "description": "Criminal Minds Game - Jogo de investigação multiplayer com PostgreSQL Retool",
  "main": "index.html",
  "scripts": {
    "start": "npx serve . -p 3000",
    "serve": "npx serve . -p 8000",
    "setup:firebase": "node setup-firebase-local.js",
    "dev": "npm run setup:firebase && npm run serve",
    "build": "echo 'Build será executado pelo GitHub Actions'",
    "deploy": "echo 'Deploy automático via GitHub Actions'",
    "test": "echo 'Testes a serem implementados'",
    "lint": "echo 'Linting a ser implementado'",
    "firebase:local": "node setup-firebase-local.js",
    "firebase:check": "echo 'Verificando configuração Firebase...' && node -e \"console.log('Firebase SDK:', require('./package.json').dependencies.firebase)\"",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:migrate:reset": "npx prisma migrate reset",
    "db:studio": "npx prisma studio",
    "db:seed": "node -e \"require('./src/config/database').DatabaseUtils.seedDatabase()\"",
    "db:import": "node scripts/import-csv-data.js",
    "db:status": "npx prisma migrate status",
    "db:validate": "npx prisma validate",
    "db:format": "npx prisma format",
    "db:health": "node -e \"require('./src/config/database').DatabaseUtils.healthCheck()\"",
    "api:start": "node server/api.js",
    "api:dev": "nodemon server/api.js",
    "api:test": "curl -s http://localhost:3001/api/health | json_pp || curl -s http://localhost:3001/api/health",
    "setup:env": "cp env.example .env && echo 'Configure suas variáveis no arquivo .env'",
    "setup:mysql": "echo 'Siga o guia MYSQL-RETOOL-SETUP.md para configuração completa'"
  },
  "keywords": [
    "game",
    "investigation",
    "multiplayer",
    "firebase",
    "authentication",
    "criminal-minds",
    "detective",
    "cards",
    "real-time"
  ],
  "author": "Criminal Minds Game Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/pg": "^8.15.5",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "firebase": "^12.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.3",
    "pg": "^8.16.3",
    "prisma": "^6.13.0"
  },
  "devDependencies": {
    "serve": "^14.2.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thamiresfm/criminal-minds-game.git"
  },
  "homepage": "https://thamiresfm.github.io/criminal-minds-game/",
  "bugs": {
    "url": "https://github.com/thamiresfm/criminal-minds-game/issues"
  },
  "private": false,
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "firebase": {
    "configured": true,
    "services": [
      "auth",
      "firestore"
    ],
    "deployment": "github-actions"
  }
}
